{
    "name": "runopencode/phplib",
    "description": "A collection of PHP libraries within mono-repository.",
    "license": "MIT",
    "authors": [
        {
            "name": "Nikola Svitlica a.k.a TheCelavi",
            "email": "thecelavi@runopencode.com"
        }
    ],
    "type": "library",
    "require": {
        "php": ">=8.4",
        "psr/cache": "^3.0",
        "symfony/cache": "^7.0",
        "symfony/config": "^7.0",
        "symfony/dependency-injection": "^7.0",
        "symfony/http-kernel": "^7.0",
        "symfony/process": "^7.0",
        "symfony/finder": "^7.0",
        "symfony/string": "^7.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.88",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^12.4",
        "rector/rector": "*",
        "symplify/monorepo-builder": "^12.2"
    },
    "autoload": {
        "psr-4": {
            "RunOpenCode\\": "src/RunOpenCode/",
            "Monorepo\\": "monorepo/"
        }
    },
    "scripts": {
        "phpunit": "XDEBUG_MODE=coverage vendor/bin/phpunit --colors=always --testdox",
        "phpstan": "XDEBUG_MODE=off vendor/bin/phpstan analyse --memory-limit=-1",
        "phpcs": "XDEBUG_MODE=off vendor/bin/php-cs-fixer fix --diff --verbose --show-progress=dots --allow-risky=yes",
        "rector": "XDEBUG_MODE=off vendor/bin/rector process --ansi --dry-run"
    },
    "replace": {
        "runopencode/metadata": "0.1.1",
        "runopencode/metadata-bundle": "0.1.1"
    },
    "minimum-stability": "stable"
}
